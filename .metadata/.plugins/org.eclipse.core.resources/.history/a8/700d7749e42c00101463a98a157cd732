package com.employee.main.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.employee.main.dto.RegisterRequest;
import com.employee.main.entity.Employee;
import com.employee.main.repository.EmployeeRepository;

@Service
public class EmployeeService {

    @Autowired
    private EmployeeRepository employeeRepository;

    public Employee registerEmployee(RegisterRequest request) {
        if (employeeRepository.existsByEmail(request.getEmail())) {
            throw new RuntimeException("Email already exists");
        }

        Employee employee = new Employee();
        employee.setFullName(request.getFullName());
        employee.setCompanyName(request.getCompanyName());
        employee.setEmail(request.getEmail());
        employee.setPassword(request.getPassword()); // Store password as-is

        return employeeRepository.save(employee);
    }
}